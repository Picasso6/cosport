<header class="masthead-2 mhead-3 text-cente">

  <div class="overlay"></div>
    <div class="container">
      <div class="row">
      <div class="col-xl-12 mx-auto font-1 text-center pb-3">
        <h1 class="f-bold font-1 strong-color"> Éditer le cosport</h1>
      </div>
  <div class="col-md-7 col-lg-7 col-xl-5 mx-auto">

  <%= form_for(@event, url: event_path(@event.id), html: { method: :patch }) do |f| %>

  <div class="col-12 mb-3">
        <%= f.text_field :title, autocomplete: "title", class: "form-control" %>
  </div>

    <div class="col-12 mb-3" >
          <%=select_tag :sport_id, options_for_select(Sport.all.collect{ |sport| [sport.sport_name, sport.id] }), autocomplete: "sport_id", class: "form-control" %>
    </div>

    <div class="col-12 mb-3" >
          <%=select_tag :city_id, options_for_select(City.all.collect{ |city| [city.city_name, city.id] }), autocomplete: "class_id", class: "form-control"  %>
    </div>

    <div id="new-event-map">

    </div><br>


      <div class="col-12 mb-3 d-flex hidden-div">
        <div class="col-6 p-0 pr-1">
          <%= f.text_field :latitude, id:"lat-form", placeholder: "latitude", class: "form-control", autocomplete: "latitude" %>
          </div>
            <div class="col-6 p-0 pl-1 ">
              <%= f.text_field :longitude, id: "lgn-form", placeholder: "longitude", class: "form-control", autocomplete: "longitude" %>
            </div>
          </div>


          <div class="col-12 mb-3 row" >
            <div class="col-9">
                <%= f.date_field :start_date, placeholder: "Date", class: "form-control ", autocomplete: "start_date"  %>
          </div>


         <div class="col-3 p-0 pr-1" >
               <em>À partir de </em>
                <%= time_field_tag 'hour_start', class: "form-control " %>
         </div>
         </div>

          <div class="col-12 mb-3" >
                <%= f.number_field :duration, class: "form-control ", placeholder: "durée" , min:0 ,step:5, autocomplete: "duration" %>
          </div>



     <div class="col-12 mb-3">
           <%= f.text_area :description, class: "form-control", placeholder: "description", autocomplete: "description" %>
     </div>

     <div class="col-12 mb-3">
           <%= submit_tag "Éditer", class: 'btn btn-block btn-lg btn-primary' %>
     </div>
     <% end %>
   </div>

</div>
</div>
</header>

  <%= javascript_include_tag 'new_event_map' %>
